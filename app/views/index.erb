<div id="enc-pane">
  <div class="hidden">
    Key: <span id="enc-key"></span>
    IV:  <span id="enc-iv"></span>
  </div>
  <div id="share-box">
    <div id="label-button">
      <label for="secret-url">Share this link:</label>
      <div class="tooltip">
        <button id="copy-button" onclick="copyToClip()" onmouseout="showTooltip()">
          <span class="tooltiptext" id="myTooltip">Copy to clipboard</span>
          <svg id="copy-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
         </svg>
        </button>
      </div>
    </div>
    <input type="text" readonly id="secret-url">
    <a id="another-secret" href="/">Create another secret</a>
  </div>
</div>

<div id="enc-form">
  <!-- return false to prevent reloading the page -->
  <form onsubmit="encryptEvent(); return false">
    <textarea id="message" name="bin[payload]" rows="20" cols="40" placeholder="Encrypt me in your browser!" required maxlength="9800"></textarea>
    <div id="msg-counter"></div>
    <div id="retention-pane">
      <label for="retention">Delete after: </label>
      <select name="retention" id="retention">
        <option value="10080">7 days</option>
        <option value="4320">3 days</option>
        <option value="1440">1 day</option>
        <option value="720">12 hours</option>
        <option value="250">4 hours</option>
        <option value="60">1 hour</option>
        <option value="30">30 minutes</option>
        <option value="5">5 minutes</option>
      </select>
    </div>
    <input type="submit" value="Create Secret">
  </form>
</div>
<script src="/javascripts/encrypt.js"></script>
